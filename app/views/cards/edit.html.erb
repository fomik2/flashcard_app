<%= render 'errors' %> <!-- Валидация формы, вывод ошибок, если они есть -->
  <h1>Edit card <%= @cards.id %></h1>
  <%= form_for :cards, url: card_path(@cards), method: :patch do |f| %>
   <p>
    <%= f.label :Original_Text %><br>
    <%= f.text_area :original_text %>
   </p>
   <p>
    <%= f.label :translated_text %><br>
    <%= f.text_area :translated_text %>
   </p>
   <p>
    <%= f.label :Дата_просмотра_карточки %><br>
    <%= f.text_field :review_date %>
   </p>
   <p>
    <%= f.submit %>
   </p>
  <% end %>
  <br>
  <%= link_to "Home", root_path %>
 </section>
