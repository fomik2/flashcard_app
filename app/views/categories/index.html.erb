<section id="container">
  <h1>Список категорий</h1>
  <table border="1" cellpadding="8">
    <tr>
      <th>Категория</th>
      <th>Описание</th>
      <th colspan="2"></th>
    <tr>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %> </td>
        <td><%= category.about %> </td>
        <td><%= link_to 'Активировать', set_current_category_path(category_id: category), method: :put %></td>
        <td><%= link_to 'Редактировать', edit_category_path(category) %></td>
        <td><%= link_to 'Удалить', category_path(category), method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </table>
  <br>
  <%= link_to "Home", root_path %>
 </section>
