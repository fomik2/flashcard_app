<% if @card.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@card.errors.count, "error") %> prohibited
    this article from being saved:</h2>
    <ul>
      <% @card.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
     </ul>
  </div>
  </br>
<% end %>
<%= simple_form_for([:dashboard, current_user, @card]) do |f| %>
  <%= f.input :picture, label: 'Include Picture' %>
  <%= f.input :original_text, label: 'Original Text'  %>
  <%= f.input :translated_text, label: 'Translated Text' %>
  <%= f.association :category, 
                    include_blank: false, 
                    collection: current_user.categories, 
                    selected: params[:category_id] %>
  <%= f.input :review_date, label: 'Дата просмотра' %>
  <%= f.button :submit %>
<% end %>
<%= link_to "Home", root_path %>  
</section>
